page {
  width: 100%;  
  height: 100%;
}
.article{
  height: 40%;
  display: flex;
  align-items: center;
  flex-direction: column;
  z-index:99;
}
.title{
  font-weight: bold;
  font-size: 22px;
  font-family: "黑体";
  color: #333333;
}

.image{
  padding-top: 10rpx;
  padding-bottom: 20rpx;
}
.scoll{
  height: 60%;
}
.text{
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 16px;
  color: #333333;
  text-indent:2em;
  line-height: 23px;
  letter-spacing:2px;
}