/**顶部搜索栏**/
.search{
  position: fixed;
  top: 0px;
  left: 0;
  width: 100%;
  z-index: 999;
  background-color: #FFF;
}
.search-section {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.search-input-wrapper {
  flex: 1;
  margin: 12rpx;
  background-color: #eee;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.search-img{
  margin-left: 10rpx;
  width: 50rpx;
  height: 50rpx;
}
.search-input {
  flex: 1;
  margin: 10rpx;
  font-size: 16px;
  color: #666666;

}
.placeholder {
    color: #D4D4D4; 
}
.search-button-wrapper {
  width: 50rpx;
  height: 50rpx;
  margin-right: 12rpx;
}
.search-button {
  width: 50rpx;
  height: 50rpx;
}

/**首页Banner**/
.banner{
  position: relative;
  padding-top: 96.5rpx;
  }
.banner-swiper{
  height: 750rpx;
  }
.banner-img{
  width: 100%; 
  height: 100%;
  }
.banner-dots{
  position: absolute;
  left:0;
  right:0;
  bottom: 50rpx;
  display: flex;
  justify-content: center;
  }
.banner-dots .dot{
  margin: 0 8rpx;
  width: 16rpx;
  height: 16rpx;
  background: #969696;
  border-radius: 8rpx;
  transition: all 0.6s;
  }
.banner-dots .dot.active{
  width: 16rpx;
  height: 16rpx;
  background: #CD2626;
  }


















































