/* 顶部搜索栏 */
.search{
  position: fixed;
  top: 0px;
  left: 0;
  width: 100%;
  z-index: 999;
  background-color: #FFF;
}
.search-section {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.search-input-wrapper {
  flex: 1;
  margin: 12rpx;
  background-color: #eee;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.search-img{
  margin-left: 10rpx;
  width: 50rpx;
  height: 50rpx;
}
.search-input {
  flex: 1;
  margin: 10rpx;
  font-size: 16px;
  color: #666666;
}
.placeholder {
  color: #D4D4D4; 
}
.search-button-wrapper {
  width: 50rpx;
  height: 50rpx;
  margin-right: 12rpx;
}
.search-button {
  width: 50rpx;
  height: 50rpx;
}

/* 搜索结果为空的时候 */
.noresult{
  width: 100%;
  height: 600rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.noresult-text{
  font-size: 12px;
  font-family: "Microsoft Yahei";
  color:#666666;
}
.suggestion{
  display: flex;
  justify-content: center;
}
.suggestion-section{
  display: flex;
  flex-direction: column;
}
.suggestion-text{
  font-size: 14px;
  font-family: "Microsoft Yahei";
  color:#666666;
}
.suggestion-img{
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
}
.suggestion-image{
  width: 160rpx;
  height: 160rpx;
}

/* 搜索结果导航栏 */
.navbar{  
  padding-top: 96.5rpx;   /* 固定搜索栏导致的距离 */
  display: flex;
  flex: none;
  background: #fff;
  margin-bottom: 8rpx;
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;
  line-height: 80rpx;  
  font-size: 12px;
  color: #999999;
}  
.navbar .item.active{  
  color: #FFCC00;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #FFCC00;  
}

/* 搜索结果列表 */
.list{
  border-bottom: 1px,solid,gray;
}
.block-img{
  width: 100%;
  height: 400rpx;
  text-align: center;
  margin-bottom: 10rpx;
}
.cover{
  height: 400rpx;
  width: 100%;
}
.block-text{
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
  margin-left: 20rpx;
  margin-right: 20rpx;
  overflow: hidden;
}
.block-info{
  display: flex;
  flex-direction: column;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.text-name{
  font-size: 14px;
  color: #333333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.text-detail{
  font-size: 13px;
  color: #666666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.block-price{
  width: auto;
}
.text-price{
  font-size: 15px;
  color: goldenrod;
  white-space: nowrap;
}