/* shopping.wxss */
/**商品展示图片**/
.banner{
  position: relative;
  }
.banner-swiper{
  height: 500rpx;
  }
.banner-img{
  width: 100%; 
  height: 100%;
  }
.banner-dots{
  position: absolute;
  left:0;
  right:0;
  bottom: 30rpx;
  display: flex;
  justify-content: center;
  }
.banner-dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 8rpx;
  background: rgba(0,0,0,0.3);
  transition: all 0.6s;
  }
.banner-dots .dot.active{
  width: 14rpx;
  height: 14rpx;
  background: #333;
  }
/*商品信息展示**/
.pro-info{
  width: 700rpx;
  margin: auto;
  margin-top: 20rpx;
}
.info-name{
  font-size: 18px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;

}
.info-detail{
  font-size: 14px;
  color: #999999;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.pro-price-section{
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  align-items: center;
}
.price-real{
  font-size: 20px;
  color: red;
}
.pro-price{
  flex: 4;
  margin-left: 20rpx;
}
.price-text{
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  background-color: #999999;
  font-size: 16px;
  color: #fff;
}
.price-ori{
  color: red;
  text-decoration: line-through;
  font-size: 16px;
}
.section-ico{
  width: 70rpx;
  height: 40rpx;
  opacity: 0.8;
}
/*商品属性选择**/
.pro-select{
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-weight: bold;
}
.select{
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.title{
  width: 120rpx;
}
.color{
  margin-top: 5rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.size{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.count{
  margin-top: 5rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.ItemText{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-right: 40rpx;
}
.pro-item{
  flex: 0 0 auto;
  margin: 7rpx; 
  padding: 10rpx 15rpx;
  background-color: #eee;
  font-size: 14px;
  color: gray;
}
.pro-item-select{
  flex: 0 0 auto;
  margin: 7rpx; 
  padding: 10rpx 15rpx;
  background-color: #FF3030;
  font-size: 14px;
  color: #fff;
}/*属性选中时的样式**/
.count-box{
  width: 200rpx;
  height: 60rpx;
  border:#999999 1rpx solid;
  border-radius: 8%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.count-down-not{
  flex: 1;
  font-size: 18px;
  border-right: #999999 1rpx solid;
  text-align: center;
  color: #e9e9e9;
}
.count-down{
  flex: 1;
  font-size: 18px;
  border-right: #999999 1rpx solid;
  text-align: center;
  color: #666666;
}
.count-add{
  flex: 1;
  font-size: 18px;
  border-left:#999999 1rpx solid;
  text-align: center;
  color: #666666;
}
.count-num{
  font-size: 16px;
  flex:3;
  text-align: center;
  color: #666666;
}



/**商品详情**/
.info-title{
  margin-left: 20rpx;
  font-weight: bold;
}
.info-block{
  margin-bottom: 120rpx;
}
.info-image{
  margin-top: 10rpx;
  width: 100%;
}
/**底部购买按钮**/
.btn-section1{
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
  display: flex;
  flex-direction: row;
}
.btn-ico1{
  padding-top: 15rpx;
  padding-right: 40rpx;
  padding-left: 40rpx;
  padding-bottom: 15rpx;
  flex: 1;
  background-color: #DCDCDC;
  width: 80rpx;
  height: 50rpx;
}
.btn-ico2{
  padding-top: 15rpx;
  padding-right: 40rpx;
  padding-left: 40rpx;
  padding-bottom: 15rpx;
  flex: 1;
  background-color: antiquewhite;
  width: 80rpx;
  height: 50rpx;
}
.ico{
  width: 80rpx;
  height: 50rpx;
  opacity: 0.8;
}
.btn-section2{
  position: fixed;
  right: 0;
  bottom: 0;
  width: 250rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btn-submit{
  width: 120rpx;
  height: 120rpx;
  background-color:#999999;
  box-shadow: 0px 0px 10px #999999;
  color: #fff;
  line-height: 120rpx;
  font-size: 25px;
  font-weight: bold;
  border-radius: 60rpx;
}
.btn-tips{
  margin: 10rpx;
  padding: 10rpx;
  background-color:antiquewhite;
  box-shadow: 0px 0px 10px #999999;
  font-size: 13px;
  align-content: center;
}