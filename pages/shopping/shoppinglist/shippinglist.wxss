/* shippinglist.wxss */
.list{
  border-bottom: 1px,solid,gray;
}
.block-img{
  width: 100%;
  height: 400rpx;
  text-align: center;
  margin-bottom: 10rpx;
}
.cover{
  height: 400rpx;
  width: 100%;
}
.block-text{
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
  margin-left: 20rpx;
  margin-right: 20rpx;
  overflow: hidden;
}
.block-info{
  display: flex;
  flex-direction: column;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.text-name{
  font-size: 14px;
  color: #333333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.text-detail{
  font-size: 13px;
  color: #666666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.block-price{
  width: auto;
}
.text-price{
  font-size: 15px;
  color: goldenrod;
  white-space: nowrap;
}