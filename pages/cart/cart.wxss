/* pages/cart/cart.wxss */
/**购物车为空**/
.none{
  display: flex;
  justify-content: center;
  font-size: 16px;
  color: #666666;
  margin-top: 500rpx;
}
/**购物车列表**/
.cart-box{
  margin-bottom: 100rpx;
}
.cart-list{
  position: relative;
  height: 200rpx;
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
  flex-direction: row;
  align-content: center;
}
.cart-pro-select{
  padding-left: 10rpx;
  padding-right: 10rpx;
  line-height: 220rpx
}
.cart-img{
  width: 185rpx;
  height: 100%;
}
/**购物车的文字信息**/
.cart-pro-info{
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  justify-content: space-between;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.cart-pro-name{
  font-size: 18px;
  color: #666666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 80rpx;
}
.cart-pro-color{
  font-size: 12px;
  color: #999999;
  display: inline;
  vertical-align: bottom;
}
.cart-count-box{
  width: 150rpx;
  height: 45rpx;
  border:#e9e9e9 1rpx solid;
  border-radius: 5%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.cart-count-down-not{
  flex: 1;
  font-size: 16px;
  border-right: #e9e9e9 1rpx solid;
  text-align: center;
  color: #e9e9e9;
}
.cart-count-down{
  flex: 1;
  font-size: 16px;
  border-right: #e9e9e9 1rpx solid;
  text-align: center;
  color: #666666;
}
.cart-count-add{
  flex: 1;
  font-size: 16px;
  border-left:#e9e9e9 1rpx solid;
  text-align: center;
  color: #666666;
}
.cart-count-num{
  font-size: 16px;
  flex:3;
  text-align: center;
  color: #666666;
}

.cart-pro-price{
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  color: #E9967A;
}
/**全选栏**/
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background: #DCDCDC;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.footer-section{
  margin-left: 10rpx;
  width: 150rpx;
  display: flex;
  align-items: center;
}
.select-ico{
  margin-right: 10rpx;
}
.select-text{
  color: #666666;
  font-size: 14px;
}
.cart-toatl-price{
  color: #E9967A;
}
.order-submit{
  position: absolute;
  right: 0;
  height: 100%;
  width: 200rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #CD5C5C;
  color: #333333;
  font-size: 16px;
}
